{% extends 'base.html.twig' %}

{% block javascripts %}
    <!--suppress JSUnresolvedLibraryURL, HtmlFormInputWithoutLabel -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.8.0/dist/chart.min.js" integrity="sha256-cHVO4dqZfamRhWD7s4iXyaXWVK10odD+qp4xidFzqTI=" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
    <div id="app">
        <div>
            <label>
                Тип графика:
                <select v-model="typeChart">
                    <option :value="1">Год - Количество</option>
                </select>
            </label>

            <label>
                Знак Зодиака:
                <select v-model="selectedZodiacSign">
                    <option value="-">Не выбрано</option>
                    <option v-for="zodiacSign of zodiacSigns" :value="zodiacSign"><% zodiacSign %></option>
                </select>
            </label>

            <label>
                Статус:
                <select v-model="selectedStatus">
                    <option value="-">Не выбрано</option>
                    <option :value="true">Активный</option>
                    <option :value="false">Не активный</option>
                </select>
            </label>

            <label>
                Тату:
                <select v-model="selectedTattoo">
                    <option value="-">Не выбрано</option>
                    <option :value="true">Есть</option>
                    <option :value="false">Нет</option>
                </select>
            </label>

            <label>
                Пирсинг:
                <select v-model="selectedPiercing">
                    <option value="-">Не выбрано</option>
                    <option value="back">Спина</option>
                    <option value="ears">Уши</option>
                    <option value="lips">Губы</option>
                    <option value="neck">Шея</option>
                    <option value="nose">Нос</option>
                    <option value="brows">Брови</option>
                    <option value="groin">Пах</option>
                    <option value="navel">Пупок</option>
                    <option value="breast">Грудь</option>
                    <option value="tongue">Язык</option>
                    <option value="abdomen">Живот</option>
                </select>
            </label>

            <label>
                Год (От):
                <select v-model="startYear">
                    <option value="-">Не выбрано</option>
                    <option v-for="year of reverseYears" :value="year"><% year %></option>
                </select>
            </label>

            <label>
                Год (До):
                <select v-model="finishYear">
                    <option value="-">Не выбрано</option>
                    <option v-for="year of reverseYears" :value="year"><% year %></option>
                </select>
            </label>

            <button @click="show">Перестроить</button>
        </div>
        <div>Всего: <% total %></div>
    </div>

    <canvas id="myChart" style="max-height: 90vh;"></canvas>

    <script>
        const colorMap = {
            'Дева': '#8B0000',
            'Скорпион': '#CD5C5C',
            'Телец': '#FFFF00',
            'Рыба': '#32CD32',
            'Овен': '#006400',
            'Рак': '#FF69B4',
            'Весы': '#C71585',
            'Лев': '#FF4500',
            'Водолей': '#00008B',
            'Козерог': '#2F4F4F',
            'Стрелец': '#000000',
            'Близнецы': '#1E90FF',
        };

        const actresses = JSON.parse('{{ json|escape('js') }}');

        let years = {};
        for (const actress of actresses) {
            const [year] = actress.dob.split('-');
            years[year] = true;
        }
        years = Object.keys(years);

        new Vue({
            el: '#app',
            delimiters: ['<%','%>'],
            data: function () {
                return {
                    total: '-',
                    typeChart: 1,
                    years: years,
                    startYear: '-',
                    finishYear: '-',
                    chart: undefined,
                    selectedTattoo: '-',
                    selectedStatus: '-',
                    actresses: actresses,
                    selectedPiercing: '-',
                    selectedZodiacSign: '-',
                    context: document.getElementById('myChart').getContext('2d'),
                    zodiacSigns: ['Дева', 'Скорпион', 'Телец', 'Рыба', 'Овен', 'Рак', 'Весы', 'Лев', 'Водолей', 'Козерог', 'Близнецы'],
                };
            },
            computed: {
                reverseYears() {
                    return this.years.reverse();
                },
            },
            methods: {
                buildYearZodiac() {
                    const {startYear, finishYear, selectedTattoo, selectedStatus, selectedPiercing, selectedZodiacSign} = this;

                    const result = {};
                    {
                        const template = {};
                        this.years.map((year) => {
                            if ('-' !== startYear) {
                                if (year < startYear) {
                                    return;
                                }
                            }

                            if ('-' !== finishYear) {
                                if (year > finishYear) {
                                    return;
                                }
                            }

                            template[year] = 0
                        });

                        this.actresses.map((item) => {
                            const {dob, tattoo, status, zodiacSign, actressPiercing} = item;
                            const [year] = dob.split('-');

                            if ('-' !== startYear) {
                                if (year < startYear) {
                                    return;
                                }
                            }

                            if ('-' !== finishYear) {
                                if (year > finishYear) {
                                    return;
                                }
                            }

                            if ('-' !== selectedStatus) {
                                if (status !== selectedStatus) {
                                    return;
                                }
                            }

                            if ('-' !== selectedTattoo) {
                                if (false === selectedTattoo) {
                                    if ('Отсутствует' !== tattoo) {
                                        return;
                                    }
                                } else {
                                    if ('Отсутствует' === tattoo) {
                                        return;
                                    }
                                }
                            }

                            if ('-' !== selectedPiercing) {
                                if (true !== actressPiercing[selectedPiercing]) {
                                    return;
                                }
                            }

                            if (undefined === result[zodiacSign]) {
                                result[zodiacSign] = {...template};
                            }

                            result[zodiacSign][year]++;
                        });
                    }

                    if (undefined !== this.chart) {
                        this.chart.destroy();
                    }

                    const datasets = [];
                    if ('-' === selectedZodiacSign) {
                        for (const [zodiacSign, data] of Object.entries(result)) {
                            datasets.push({
                                data: data,
                                fill: false,
                                tension: 0.1,
                                label: zodiacSign,
                                borderColor: colorMap[zodiacSign],
                            });
                        }
                        this.total = '-';
                    } else {
                        const data = result[selectedZodiacSign];
                        datasets.push({
                            fill: false,
                            tension: 0.1,
                            data: data,
                            label: selectedZodiacSign,
                            borderColor: colorMap[selectedZodiacSign],
                        });

                        this.total = Object.values(data).reduce((pv, number) => number + pv, 0);
                    }

                    this.chart = new Chart(this.context, {type: 'line', data: {datasets}});
                },
                show() {
                    this.buildYearZodiac();
                }
            },
        });
    </script>
{% endblock %}